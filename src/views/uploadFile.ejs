<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Node.Js Basic</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
  </head>
  <body>
    <div class="topnav">
      <a href="/">Home</a>
      <a class="active" href="/upload">Upload file</a>
    </div>

    <div class="upload-file-container">
      <form
        method="post"
        action="/upload-profile-pic"
        enctype="multipart/form-data">
        <div>
          <label for="">Avatar:</label>
          <input type="file" name="profile_pic" />
        </div>

        <div>
          <button class="btn-save" type="submit">Save file</button>
        </div>
      </form>

      <form
        method="post"
        action="/upload-profile-pic"
        enctype="multipart/form-data">
        <div>
          <label for="">Select multiple images:</label>
          <input type="file" name="multiple_images" multiple />
        </div>

        <div>
          <button class="btn-save" type="submit">Save file</button>
        </div>
      </form>
    </div>
  </body>
</html>
